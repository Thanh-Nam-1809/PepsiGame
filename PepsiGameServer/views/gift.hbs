<script>
    const edit = (id) => {
        // http://localhost:3000/products/:id/edit
        window.location.href = `http://localhost:3000/gift/${id}/edit`
    }

    let deleted_id;

    const onClickDelete = (id) => {
        deleted_id = id;
    }

    const fetchAPI = async (url, option) => {
        const res = await fetch(url, option);
        return res.json();
    }
    const onDelete = async () => {
        const url = `http://localhost:3000/gift/${deleted_id}/delete`;
        const option = {
            method: 'delete',
            headers: { 'Content-Type': 'application/json' }
        }
        try {
            await fetchAPI(url, option);
            window.location.href = '/gift';
        } catch (e) { console.log('Delete error: ', e) }
    }

    function xoa(id) {
        var result = confirm("Do you want to delete this gift ?");
        onClickDelete(id);
        if (result == true) {
            alert("You agree to delete");
            onDelete();
        } else {
            return null;
        }
    }

</script>