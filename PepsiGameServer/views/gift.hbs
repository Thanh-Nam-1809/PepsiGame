<body>
    <div class="container">
        <div class="textProduct">
            <h1>Danh Sách Các Sản Phẩm</h1>
        </div>
        <div class="search">
            <form action="" style="margin-left: 116px;">
                <button class="btnSearch"> <a href="/product/addProduct" class="textSearch"> + Thêm mới</a>
                </button>
                <button class="btnSearch"> <a href="/product" class="textSearch"> Quay lại</a> </button>
            </form>
        </div>
        <div class="products">
            <table>
                <thead>
                    <tr>
                        <th rowspan="2">STT</th>
                        <th rowspan="2">Name</th>
                        <th rowspan="2">Price</th>
                        <th rowspan="2">Images</th>
                        <th rowspan="2">Họ và tên</th>
                        <th rowspan="2">phone</th>
                        <th rowspan="2">address</th>
                        <th rowspan="2">status</th>
                        <th rowspan="2">id người mua</th>
                        <th rowspan="2">Edit Delete</th>
                    </tr>

        </div>
        </thead>
        {{#each gifts}}
        <tbody>
            <tr>
                <td>{{this.index}}</td>
                <td>{{this.name}}</td>
                <td>{{this.price}}</td>
                <td>
                    <img src="{{this.image}}" width="100" height="100" />
                </td>
                <td>{{this.hvt}}</td>
                <td>{{this.phone}}</td>
                <td>{{this.address}}</td>

                <td>{{this.status}}</td>
                <td>{{this.id_user}}</td>

                <td>
                    <a onclick="edit('{{this._id}}')" class="iconEdit"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a onclick="return xoa('{{this._id}}');" class="iconDelete" id="myBtn"><i
                            class="fa-solid fa-trash"></i></a>
                </td>

            </tr>
        </tbody>
        {{/each}}
        </table>

    </div>
</body>

